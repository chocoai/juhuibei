<view class="example--box">
    <view class="example--demo demo">
        <view class="demo-inner">
            <slot></slot>
            <image class="dome-image" src="{{image_url}}"></image>
            <view class="countdown">
              <wxc-label class="label_countdown" type="fill" type-color="#ff4444">
                <wxc-countdown countdown="{{countdown}}"></wxc-countdown>
              </wxc-label>
              <wxc-label class="label_coming" type="fill" type-color="#ffe8ee" text-color="#ff5577">已报名{{coming}}人</wxc-label>
            </view>
            
        </view>
    </view>
    <view class="example--meta meta">
        <view class="meta-title">{{title}}</view>
        <view class="meta-desc"><image class="meta-icon" src="../../../../common/assets/images/position.png"></image>{{desc}}</view>
        
    </view>
    <view class="example--source">
        <view class="view-btn {{viewSourceClass}}" bindtap="bindViewSourceEvent">{{ isExpandSource ? '收起列表' : '查看详情' }}</view>
        <view wx:if="{{isExpandSource}}">
          <block wx:for="{{avatar}}" wx:key="item">
            <view wx:if="{{item.is_coming}}">
              <wxc-avatar class="avatar" count="{{item.count}}" src="{{item.user.avatar_url}}"></wxc-avatar>
            </view>
          </block>
          <view class="button-sp-area">
            <button class="weui-btn" type="warn" plain="true" size="mini" bindtap="showDialog">我要参加</button>
            <wxc-dialog class="wxc-dialog" title="" content="" confirm-text="确认报名" bindconfirm="onConfirm" cancel-text="取消" bindcancel="onCancel" _pid="{{_pid}}">
              <form>
              <input class="form-name" name="name" placeholder="请输入您的姓名"></input>
              <input class="form-phone" name="phone" placeholder="请输入您的手机"></input>
              </form>
            </wxc-dialog>
          </view>
        </view>
    </view>
</view>