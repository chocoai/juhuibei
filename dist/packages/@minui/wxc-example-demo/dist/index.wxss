}

.dialog-input {
  border: 1px solid #ebebeb;
  padding:10rpx 30rpx;
  border-radius: 5rpx;
  margin-bottom: 20rpx;
}

.dialog-submit {
  position: relative;
  width: 100%;
  background-color: #FFFFFF;
  color: #FF4444;
  margin-bottom: 20rpx;
}
