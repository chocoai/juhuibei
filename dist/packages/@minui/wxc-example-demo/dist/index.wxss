.example--box {
  overflow: hidden;
  border: 1rpx solid #e0e0e0;
  border-radius: 7rpx;
  margin: 10rpx 0 0;
  transition: all .2s ease;
  box-shadow: 0 0 6rpx rgba(0, 0, 0, .15);
  z-index: 10;
  background: #fff;
}

