<view class="music-lyric">
  <view class="music-content-header">
    <text class="content-label">聚会影集</text>
    <view class="content-links" data-id="{{item.id}}" bindtap="switchContent">
      <image class="link" src="/image/music_story_default.png" mode="aspectFill" data-type="story"></image>
      <image class="link" src="/image/music_lyric_selected.png" mode="aspectFill"></image>
      <image class="link" src="/image/music_about_default.png" mode="aspectFill" data-type="about"></image>
    </view>
  </view>
  <view class="music-content-body">
    <view class="lyric-content">
      <text>{{item.lyric}}</text>
    </view>
  </view>
  <wxc-flex class="wrap" cross="top" wrap="wrap">
    <view class="item">
      <view class="item-photo-box">
        <image class="item-photo" src="https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1513093903135&di=118786e272164022ecc02181ff3c70bd&imgtype=0&src=http%3A%2F%2Fimg003.21cnimg.com%2Fphotos%2Falbum%2F20170219%2Fm600%2F8BEEA3B4353DB9EF5B787A8C2762473B.jpeg" mode="aspectFit"></image>
        <text class="item-text">聚会合影</text>
      </view>
    </view>
    <view class="item">
      <view class="item-photo-box">
        <image class="item-photo" src="" mode="aspectFit"></image>
        <text class="item-text">情深似海</text>
      </view>
    </view>
    <view class="item">
      <view class="item-photo-box">
        <image class="item-photo" src="" mode="aspectFit"></image>
        <text class="item-text">丰盛的美食</text>
      </view>
    </view>
    <view class="item">
      <view class="item-photo-box">
        <image class="item-photo" src="" mode="aspectFit"></image>
        <text class="item-text">最美的回忆</text>
      </view>
    </view>
    <view class="item">
      <view class="item-photo-box">
        <image class="item-photo" src="" mode="aspectFit"></image>
        <text class="item-text">干杯</text>
      </view>
    </view>
    <view class="item">
      <view class="item-photo-box">
        <image class="item-photo" src="" mode="aspectFit"></image>
        <text class="item-text">抢红包</text>
      </view>
    </view>
    <view class="item">
      <view class="item-photo-box">
        <image class="item-photo" src="" mode="aspectFit"></image>
        <text class="item-text">现场游戏</text>
      </view>
    </view>
    <view class="item">
      <view class="item-photo-box">
        <image class="item-photo" src="" mode="aspectFit"></image>
        <text class="item-text">自定义</text>
      </view>
    </view>
  </wxc-flex>
</view>