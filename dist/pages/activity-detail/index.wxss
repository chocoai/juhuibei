page {
  height: 100%;
}

.container {
  height: 100%;
  box-sizing: border-box;
} 

.musics-swiper {
  width: 100%;
  height: 240px;
}

.music {
 
  width: calc(100% + 30rpx);
}

.music-container {
  margin-right: 30rpx;
}

.music-cover {
  width: 100%;
}

.music-cover-image {
  width: 100%;
  height: 240px;
}

.music-control {
  margin: 0 20rpx;
  padding: 15rpx 20rpx 8rpx 15rpx;
  position: relative;
  top: -20px;
  background-color: #fff;
  /* border: 1px olid #ebebeb; */
  border-radius: 3px;
  box-shadow: 0px 1px 1px #ebebeb;
}

.music-author {
  display: inline-block;
  width: 80%;
  margin-bottom: 25px;
  font-weight: 200;
  font-size: 12px;
}

.music-author-avatar {
  width: 40px;
  height: 40px;
  float: left;
  margin-right: 15rpx;
  border-radius: 50%;
}

.music-author-username {
  padding: 5px;
  color: #ff4444;
}

.music-author-desc {
  color: #888;
}

.music-play {
  float: right;
}

.share-btn {
  position: static;
  padding: 0;
  display: inline;
  float: right;
  border: none;
  background-color: #fff;
}
.share-btn:after {
  position: static;
  border: none;
  background-color: #fff;
}

/* .music-play-control {
  width: 50px;
  height: 50px;
  margin-top: 10px;
} */
.music-play-control {
  margin-top: 5px;
  display: block;
  color: #FFFFFF;
  width: 40px;
  height: 40px;
  border-radius: 25px;
  line-height: 40px;
  text-align: center;
  font-size: 14px;
  background-color: #FF4444;
  border: 5px solid #FFC7C7;
}

.music-title {
  font-size: 24rpx;
  color: #888;
}

.music-maketime {
  color: #ff4444;
  font-size: 24rpx;
  text-align: right;
  position: absolute;
  right:20rpx;
  bottom: 8rpx;
}

.music-content {
  margin: 0 20rpx 25rpx 20rpx;
}

.music-content-header {
  text-align: right;
  border-bottom: 1px solid #eee;
}

.content-label {
  float: left;
  margin-top: 10rpx;
  margin-left: 5rpx;
  font-size: 12px;
}

.content-links {
  display: inline-block;
}

.link {
  width: 35px;
  height: 18px;
}

.music-content-body {
  margin-top: 10px;
}

.story-title {
  font-size: 16px;
  margin-bottom: 10px;
}

.story-author {
  color: #89bdf7;
  font-size: 12px;
  margin-bottom: 10px;
}

.story-content {
  font-size: 14px;
  line-height: 1.5;
}

.lyric-content {
  font-size: 14px;
  line-height: 1.5;
}

.about-content {
  font-size: 14px;
  line-height: 1.5;
}

.nocoming {
  margin: 20rpx 20rpx;
  color:#888;
}


page {
  background: #FFFFFF;
}
.wrap {
    display: block;
    padding: 1%;
  }
.item {
  width: 31%;
  height: 300rpx;
  margin: 1.16%;
  flex-grow: 0;
  background: #ffffff;
  box-shadow: 0 0 10rpx #ccc;
  border-radius: 5rpx;
  text-align: center;
}
.item-photo-box {
  width:90%;
  height: 200rpx;
  margin: 10% 5%;
  box-shadow: 0px 0px 10px #ccc inset;
  background-image: url('https://www.juhuibei.com/images/add_photo.jpg');
  background-size:100% 200rpx;
}
.item-photo {
  width:100%;
  height: 200rpx;
}
.item-text {
  font-size: 24rpx;
}
/* info */
.weui-media-box__info {
  color: #888;
  line-height: 40rpx;
  word-wrap:break-word;
  margin-top: 10px;
}

.address {
  margin-left: 20rpx;
}

.meta-navigator {
  display: inline-block;
  margin-right: 20rpx;
}

.navigator-hover {
  color:#ff4444;
}

/* callbook */
.call_avatar {
  position: relative;
  margin-right: 20rpx;
  vertical-align: middle;
  width:40px; 
  height: 40px;
  border-radius:50%;
}
.weui-badge {
  margin-left: 5px;
  font-size:10px;
  background:#ff4444;
}

.dialog-form {

}

.dialog-input {
  border: 1px solid #ebebeb;
  padding:10rpx 30rpx;
  border-radius: 5rpx;
  margin-bottom: 20rpx;
}

.dialog-submit {
  position: relative;
  width: 100%;
  background-color: #FFFFFF;
  color: #FF4444;
  margin-bottom: 20rpx;
}

.icon {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
}

.info-menu {
  display: block;
  position: fixed;
  bottom: 20rpx;
  right: 20rpx;
  width: 40px;
  height: 40px;
  border-radius: 25px;
  line-height: 40px;
  text-align: center;
  opacity: 0.7;
  font-size: 16px;
  color: #FF4444;
  box-shadow:0 0 4px rgba(0, 0, 0, 0.14), 0 4px 8px rgba(0, 0, 0, 0.28);
}