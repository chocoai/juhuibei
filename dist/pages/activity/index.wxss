.weui-uploader__input-box {
  border-radius:5px;
  width: 50px;
  height: 50px;
}
.weui-uploader__img{
  border-radius:5px;
  width: 50px;
  height: 50px;
}
.loear-uploder__tips {
  line-height:50px;
  color:#bbb;
  font-size:12px;
}
.weui-textarea-counter{
  font-size: 14px;
}
.placeholder{
  font-size:14px;
}
.weui-uploader{
  margin-top:60px;
}
.weui-textarea{
  font-size:14px;
}
.loear-data{
  text-align: right;
}
.loear-time{
  text-align: right;
  padding-left:10px;
  border-left:1px dashed #ddd;
  margin-left:10px;
}
.loear-right{
  text-align: right;
  width:100%;
}
.loear-submit{
  position: fixed;
  bottom: 0;
  text-align: center;
  width: 100%;
  padding: 10px 0;
}
.loear-submit .button-sp-area{
  margin:0 auto;
  width:100%
}
.loear-submit-space{
  height: 30px;
}
.loear-btn{
  width:50px;
  height:50px;
  border-radius:50%;
  z-index:1500;
  background-color:#ff4444;
  text-align: center;
  color:#fff;
  box-shadow: 0 0 4px rgba(0, 0, 0, 0.14), 0 4px 8px rgba(0, 0, 0, 0.28);
}
.loear-icon{
  display: inline-block;
  width: 40px;
  height: 40px;
  line-height: 50px;
  position: absolute;
  left:5px;
  top:5px;
}

.popup__content {
  width:100%;
  height: 200rpx;
  line-height: 200rpx;
  text-align: center;
  background: #fff;
}