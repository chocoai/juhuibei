.weui-uploader__input-box {
  border-radius:5px;
  width: 50px;
  height: 50px;
}
.weui-uploader__img{
  border-radius:5px;
  width: 50px;
  height: 50px;
}
.loear-uploder__tips {
  line-height:50px;
  color:#bbb;
  font-size:12px;
}
.weui-textarea-counter{
  font-size: 14px;
}
.placeholder{
  font-size:14px;
}
.weui-uploader{
  margin-top:60px;
}
.weui-textarea{
  font-size:14px;
}
.loear-data{
  text-align: right;
}
.loear-time{
  text-align: right;
  padding-left:20px;
  border-left:1px solid #f8f8f8;
  margin-left:20px;
}
.loear-right{
  text-align: right;
  width:100%;
}
.loear-submit{
  position: fixed;
  bottom: 0;
  text-align: center;
  width: 100%;
  padding: 10px 0;
}
.loear-submit .button-sp-area{
  margin:0 auto;
  width:100%
}
.loear-submit-space{
  height: 30px;
}
.loear-btn{
  width:50px;
  height:50px;
  border-radius:50%;
  z-index:1500;
  background-color:#ff4444;
  text-align: center;
  color:#fff;
  box-shadow: 0 0 4px rgba(0, 0, 0, 0.14), 0 4px 8px rgba(0, 0, 0, 0.28);
}
.loear-icon{
  display: inline-block;
  width: 40px;
  height: 40px;
  line-height: 50px;
  position: absolute;
  left:5px;
  top:5px;
}

.popup__content {
  width:100%;
  height: 200rpx;
  line-height: 200rpx;
  text-align: center;
  background: #fff;
}

.weui-cells:after {
  border-bottom: none;
}

.weui-cells:before {
   border-top:none;
}

.weui-cell:before {
  border-top:1rpx solid #F8F8F8;
}

.weui-cells {
  font-size: 14px;
}


.loear-title {
  font-size: 17px;
}

.header-box{
  height: 2%;
}

.show-box {
  width: 94%;
  height: 85%;
  margin: 0 3%;
  border-radius: 15rpx;
  box-shadow:0 0 4px rgba(0, 0, 0, 0.14),0 4px 8px rgba(0, 0, 0, 0.28);
  overflow: scroll;
}

.submit-box {
  position: absolute;
  bottom: 2%;
  left: 0;
  width: 94%;
  height: 100rpx;
  margin: 0 3%;
  border-radius: 15rpx;
  background: #8DC048;
  text-align: center;
  color: #FFF;
  line-height: 100rpx;
  box-shadow:0 0 4px rgba(255, 119, 119, 0.14),0 4px 8px rgba(255, 119, 119, 0.28);
}

.submit-btn {
  color: #FFFFFF;
  background: #FF7777;
  display: inline-block;
  width:100%;
  height:100rpx;
  line-height: 100rpx;
}

.submit-btn::after {
  border: 0;
}

.hide {
  height:0;
  overflow:hidden;
}

.show {
  height:auto;
}