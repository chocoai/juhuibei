.header-box{
  height: 5%;
}
.show-box {
  width: 94%;
  height: 380px;
  margin: 0 3%;
  border-radius: 15rpx;
  box-shadow:0 0 4px rgba(255, 119, 119, 0.14),0 4px 8px rgba(255, 119, 119, 0.28);
  overflow: hidden;
}
.show-swiper {
  height: 100%;
  width: calc(34%-20px);
  /* padding: 10px; */
}
.show-swiper-item {
  overflow: scroll;
}
.slide-image {
  height: 100%;
  width: 100%;
}
.submit-box {
  position: absolute;
  /* bottom: 2%; */
  left: 0;
  width: 94%;
  height: 100rpx;
  margin: 5% 3%;
  border-radius: 15rpx;
  background: #ff7777;
  text-align: center;
  color: #FFF;
  line-height: 100rpx;
  box-shadow:0 0 4px rgba(255, 1119, 119, 0.14),0 4px 8px rgba(255, 119, 119, 0.28);
}

.submit-btn {
  color: #FFFFFF;
  background: #ff7777;
  display: inline-block;
  width:100%;
  height:100rpx;
  line-height: 100rpx;
}

.submit-btn::after {
  border: 0;
}

.submit-active {
  opacity: .7;
}

.weui-cells {
  font-size: 14px;
}

.weui-cells:after {
  border-bottom:1rpx solid #f8f8f8;
}

.weui-cells:before {
  border-top:1rpx solid #f8f8f8;
}

.weui-cell:before {
  border-top:1rpx solid #f8f8f8;
}

.weui-uploader__input-box {
  border-radius:5px;
  width: 50px;
  height: 50px;
}
.weui-uploader__img{
  border-radius:5px;
  width: 50px;
  height: 50px;
}
.loear-uploder__tips {
  line-height:50px;
  color:#bbb;
  font-size:12px;
}
.weui-uploader{
  /* margin-top:60px; */
}
.loear-data{
  text-align: right;
}
.loear-time{
  text-align: right;
  padding-left:20px;
  border-left:1px solid #f8f8f8;
  margin-left:20px;
}
.loear-right{
  text-align: right;
  width:100%;
  overflow:auto;
}
.loear-input {
  height: 3rem;
  line-height: 3rem;
  font-size: 17px;
  color: #FF7777;
}

.loear-switch {
  font-size: 17px;
  color: #FF7777;
}

.loear-textarea {
  height:10rem;
  font-size: 17px;
  color: #FF7777;
}

.loear-placeholder {
  color: #ddd;
}

.cells-loear:after {
  border: 0;
}

.cell-loear {
  padding: 0;  
  padding-left: 5px;
  padding-top: 5px;
  border: 0;
}

.cell-loear::before {
  border: 0;
}

.cell-voice {
  background: #f8f8f8;
}

.cell-voice:before {
  border: none;
}

.page-section {
  width:100%;
}

image {
  width: 150rpx;
  height: 150rpx;
}

.page-body-wrapper {
  justify-content: space-between;
  flex-grow: 1;
  margin-bottom: 300rpx;
}
.page-body-time {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content:center;
}
.time-big {
  font-size: 17px;
  margin: 20rpx;
  color: #DDDDDD;
}
.time-small {
  font-size: 17px;
  margin: 20rpx;
  color: #DDDDDD;
}

.page-body-buttons {
  margin-top: 60rpx;
  display: flex;
  justify-content: space-around;
}
.page-body-button {
  width: 250rpx;
  text-align: center;
}
.button-stop-record {
  width: 110rpx;
  height: 110rpx;
  border: 20rpx solid #fff;
  background-color: #FF7777;
  border-radius: 130rpx;
  margin: 0 auto;
}
