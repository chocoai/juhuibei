canvas{
  width: 100%;
  height: 600px;
}

.header-box{
  height: 2%;
}

.show-box {
  width: 94%;
  margin: 0 3%;
  box-shadow:0 0 4px rgba(255, 119, 119, 0.14),0 4px 8px rgba(255, 119, 119, 0.28);
  overflow: hidden;
}

.submit-box {
  position: absolute;
  bottom: 2%;
  left: 0;
  width: 94%;
  height: 100rpx;
  margin: 0 3%;
  border-radius: 10rpx;
  background: #FF7777;
  text-align: center;
  color: #FFF;
  line-height: 100rpx;
  box-shadow:0 0 4px rgba(255, 119, 119, 0.14),0 4px 8px rgba(255, 119, 119, 0.28);
}
