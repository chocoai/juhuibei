<form bindsubmit="submitForm" report-submit="true">
  <view class="header-box"></view>
  <view class="show-box">
    <swiper class="show-swiper"
      indicator-dots="{{indicatorDots}}"
      autoplay="{{autoplay}}"
      interval="{{interval}}"
      duration="{{duration}}"
      vertical="{{vertical}}"
    >
        <swiper-item class="show-swiper-item">
          <!-- 新娘信息 -->
          <view class="weui-cells__title">新娘信息</view>
          <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
              <view class="weui-cell__hd">
                <view class="weui-label">姓名</view>
              </view>
              <input class="weui-input loear-right" placeholder="请输入姓名" placeholder-class='loear-right' name="bride_name" value="{{bride_name}}"/>
            </view>
            <view class="weui-cell weui-cell_input">
              <view class="weui-cell__hd">
                <view class="weui-label">手机</view>
              </view>
              <input class="weui-input loear-right" type="number" placeholder="请输入手机号" placeholder-class='loear-right' name="bride_phone" value="{{bride_phone}}"/>
            </view>
          </view>
          <!-- 新郎信息 -->
          <view class="weui-cells__title">新郎信息</view>
          <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
              <view class="weui-cell__hd">
                <view class="weui-label">姓名</view>
              </view>
              <input class="weui-input loear-right" placeholder="请输入姓名" placeholder-class='loear-right' name="bridegroom_name" value="{{bridegroom_name}}"/>
            </view>
            <view class="weui-cell weui-cell_input">
              <view class="weui-cell__hd">
                <view class="weui-label">手机</view>
              </view>
              <input class="weui-input loear-right" type="number" placeholder="请输入手机号" placeholder-class='loear-right' name="bridegroom_phone" value="{{bridegroom_phone}}"/>
            </view>
          </view>

          <view class="weui-cells__title">其他信息</view>
          <view class="weui-cells weui-cells_after-title">
            <!-- 婚礼时间  -->
            <view class="weui-cell weui-cell_input" hover-class="weui-cell_active">
              <view class="weui-cell__hd">
                <view class="weui-label">婚礼时间</view>
              </view>
              <view class="weui-cell__bd loear-data">
                <picker mode="date" value="{{date}}" start="2018-01-01" end="2019-01-01" bindchange="bindEndDateChange" name="end_date">
                  <view class="weui-input">{{date}}</view>
                </picker>
              </view>
              <view class="loear-time">
                <picker mode="time" value="{{time}}" start="7:01" end="23:59" bindchange="bindEndTimeChange" name="end_time" style='margin-right:10px;'>
                  <view class="weui-input">{{time}}</view>
                </picker>
              </view>
            </view>
            <!-- 婚礼地点  -->
            <view bindtap="chooseLocation" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
              <view class="weui-cell__bd">婚礼地点</view>
              <view class="weui-cell__ft weui-cell__ft_in-access">{{wedding_address}}</view>
            </view>
            <!-- 加载页图片 -->
            <view class="weui-cell">
                <view class="weui-cell__bd">
                  <view class="weui-uploader">
                    <view class="weui-uploader__bd">
                      <block wx:if="{{cover}}">
                        <view class="weui-uploader__files" id="uploaderFiles">
                          <view class="weui-uploader__file">
                            <image class="weui-uploader__img" src="{{cover.url}}" mode="aspectFill" bindtap="previewImage" data-url="{{cover.url}}"/>
                          </view>
                        </view>
                        <view class="loear-uploder__tips" bindtap="chooseImage" data-img="{{cover}}">
                          <text class="fa fa-refresh"></text> 更换加载页图片
                        </view>
                      </block>
                      <block wx:else>
                        <view class="weui-uploader__input-box">
                          <view class="weui-uploader__input" bindtap="chooseImage"></view>
                        </view>
                        <view class="loear-uploder__tips">
                          <text class="fa fa-upload"></text> 上传加载页图片
                        </view>
                      </block>
                    </view>
                  </view>
                </view>
            </view>
          </view>
          <!-- 视频区域 -->
          <view class="weui-cells__title">视频</view>
          <view class="weui-cells weui-cells_after-title">
            <!-- 视频链接  -->
            <view class="weui-cell weui-cell_input">
              <view class="weui-cell__hd">
                <view class="weui-label">视频链接</view>
              </view>
              <input class="weui-input loear-right" placeholder="请填写腾讯视频链接" placeholder-class='loear-right' name="wedding_video" value="{{wedding_video}}"/>
            </view>
            <!-- 视频截图  -->
            <view class="weui-cell">
              <view class="weui-cell__bd">
                <view class="weui-uploader">
                  <view class="weui-uploader__bd">                    
                    <block wx:if="{{wedding_video_cover}}">
                      <view class="weui-uploader__files" id="uploaderFiles">
                        <view class="weui-uploader__file">
                          <image class="weui-uploader__img" src="{{wedding_video_cover.url}}" mode="aspectFill" bindtap="previewImage" data-url="{{wedding_video_cover.url}}"/>
                        </view>
                      </view>
                      <view class="loear-uploder__tips" bindtap="chooseImage" data-img="{{wedding_video_cover}}">
                        <text class="fa fa-refresh"></text> 更换视频截图
                      </view>
                    </block>
                    <block wx:else>
                      <view class="weui-uploader__input-box">
                        <view class="weui-uploader__input" bindtap="chooseImage"></view>
                      </view>
                      <view class="loear-uploder__tips">
                        <text class="fa fa-upload"></text> 上传视频截图
                      </view>
                    </block>
                  </view>
                </view>
              </view>
            </view>
          </view>
        </swiper-item>

        <swiper-item class="show-swiper-item">
          <view class="weui-cells__title">修改页面照片</view>
          <view class="weui-cells weui-cells_after-title">
            <block wx:for="{{tag}}" wx:key="" wx:for-item="item">
              <block wx:if="{{item.type == 'img'}}">
                <view class="weui-cell">
                  <view class="weui-cell__bd">
                    <view class="weui-uploader">
                      <view class="weui-uploader__bd">
                        <view class="weui-uploader__files" id="uploaderFiles">
                          <view class="weui-uploader__file">
                            <image class="weui-uploader__img" src="{{item.value}}" mode="aspectFill" bindtap="previewImage" data-url="{{item.value}}"/>
                          </view>
                        </view>
                        <view class="loear-uploder__tips" bindtap="chooseImage" data-img="{{item.img}}">
                          <text class="fa fa-refresh"></text> 更换照片
                        </view>
                      </view>
                    </view>
                  </view>
                </view>
              </block>
            </block>
          </view>
        </swiper-item>

        <swiper-item class="show-swiper-item">
          <view class="weui-cells__title">选择背景音乐</view>
          <view class="weui-cells weui-cells_after-title">              
            <radio-group bindchange="radioChange">
              <label class="weui-cell weui-check__label" wx:for="{{radioItems}}" wx:key="value">
                  <radio class="weui-check" name="music_id" value="{{item.id}}" checked="{{item.checked}}"/>
                  <view class="weui-cell__bd" bindtap="playMusic" data-url="{{item.url}}">背景音乐{{item.id}}.mp3</view>
                  <view class="weui-cell__ft weui-cell__ft_in-radio" wx:if="{{item.checked}}">
                      <icon class="weui-icon-radio" type="success_no_circle" size="16"></icon>
                  </view>
              </label>
            </radio-group>
          </view>
        </swiper-item>
        
      
    </swiper>
  </view>

  <view class="submit-box" hover-class="submit-btn_active">
    <view class="submit-btn">保存</view>
  </view>
</form>