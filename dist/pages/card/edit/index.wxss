.header-box{
  height: 2%;
}
.show-box {
  width: 94%;
  height: 85%;
  margin: 0 3%;
  border-radius: 15rpx;
  box-shadow:0 0 4px rgba(0, 0, 0, 0.14),0 4px 8px rgba(0, 0, 0, 0.28);
  overflow: hidden;
}
.show-swiper {
  height: 100%;
  width: calc(34%-20px);
  /* padding: 10px; */
}
.show-swiper-item {
  overflow: scroll;
}
.slide-image {
  height: 100%;
  width: 100%;
}
.submit-box {
  position: absolute;
  bottom: 2%;
  left: 0;
  width: 94%;
  height: 100rpx;
  margin: 0 3%;
  border-radius: 15rpx;
  background: #8DC048;
  text-align: center;
  color: #FFF;
  line-height: 100rpx;
  box-shadow:0 0 4px rgba(255, 119, 119, 0.14),0 4px 8px rgba(255, 119, 119, 0.28);
}

.submit-btn {
  color: #FFFFFF;
  background: #FF7777;
  display: inline-block;
  width:100%;
  height:100rpx;
  line-height: 100rpx;
}

.submit-btn::after {
  border: 0;
}

.submit-active {
  opacity: .7;
}

.weui-cells {
  font-size: 14px;
}

.weui-cells:after {
  border-bottom:1rpx solid #f8f8f8;
}

.weui-cells:before {
  border-top:1rpx solid #f8f8f8;
}

.weui-cell:before {
  border-top:1rpx solid #f8f8f8;
}

.weui-uploader__input-box {
  border-radius:5px;
