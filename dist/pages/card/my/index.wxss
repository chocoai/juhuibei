page {
  background: #FFFFFF;
}
.wrap {
  display: block;
  padding: 1%;
}

.item {
  width: 90%;
  height: 920rpx;
  margin: 5%;
  flex-grow: 0;
  background: #ffffff;
  box-shadow: 0 0 10rpx #ccc;
  border-radius: 5px;
  text-align: center;
  overflow: hidden;
}
.item-photo-box {
  width:100%;
  height: 920rpx;
  box-shadow: 0px 0px 10px #ccc inset;
  background-image: url('https://www.juhuibei.com/images/add_photo.jpg');
  background-size:100% 920rpx;
}
.item-photo {
  width:100%;
  height: 100%;
  margin-bottom: 40rpx;
}

.item-tigs {
  font-size: 10px;
  color: #ccc;
  text-align: center;
  position: relative;
  top: -30rpx;
  left: 0;
}

.date{
  width:100%;
  text-align: center;
  color:#888;
  margin-top: 20rpx;
}

.user-info {
  display: inline-block;
  height: 40px;
  width: 210px;
  border-radius: 20px;
  /* background: #ccc; */
  box-shadow:0 0 10rpx #ccc;
}

.user-info-text {
  display: inline-block;
  width: 130px;
  font-size: 12px;
  line-height: 40px;
  height: 40px;
  float: left;
}

.avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  float: left;
}

.change {
  display: inline-block;
  line-height: 40px;
  color: #FFFFFF;
}

.show-swiper {
  height: 100%;
  width: 100%;
  /* padding: 10px; */
}

.share-btn {
  position: static;
  padding: 0;
  display: inline-block;
  width:40px;
  height: 40px;
  border: none;
  background-color: transparent;
  font-size: 12px;
  border-radius: 20px;
  line-height: 40px;
  color: #FFFFFF;
}

.share-btn:after {
  position: static;
  border: none;
  background-color: transparent;
}