<view class="page">
  <view class="header-box"></view>
  <view class="show-box">
    <view class="page__bd pay-box">
      <view class="weui-form-preview">

        <view class="weui-form-preview__hd">
          <view class="weui-form-preview__item ">
            <view class="weui-form-preview__label">付款金额</view>
            <view class="weui-form-preview__value_in-hd price">¥{{info.price}}</view>
          </view>
        </view>

        <view class="weui-form-preview__bd">
          <view class="weui-form-preview__item line-bottom">
            <view class="weui-form-preview__label">订单编号</view>
            <view class="weui-form-preview__value">{{order_sn}}</view>
          </view>
          <view class="weui-form-preview__item line-bottom">
            <view class="weui-form-preview__label">购买主题</view>
            <view class="weui-form-preview__value">主题一</view>
          </view>
          <view class="weui-form-preview__item">
            <view class="weui-form-preview__label">会员特权</view>
            <block wx:for="{{card.vip2.power}}" wx:key="">
              <view class="weui-form-preview__value">{{item}}</view>
            </block>
          </view>
        </view>

      </view>
    </view>
  </view>
  <view class="submit-box" hover-class="submit-btn_active">
    <view class="submit-btn">立即支付</view>
  </view>
</view>
  