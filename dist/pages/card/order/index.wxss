/* pages/order/index.wxss */

.pay-box {

}

.example__head {
    padding: 30rpx 30rpx 0;
    text-align: center;
    margin-bottom: 30rpx;
}
.example__head--title {
    display: inline-block;
    padding: 0 40rpx 10rpx 40rpx;
    font-size: 32rpx;
    color: #9B9B9B
}
.example__head--line {
    margin: 0 auto;
    width: 150rpx;
    height: 2rpx;
    background-color: #D8D8D8
}

.example__head--desc {
    padding-top: 13rpx;
    color: #BEBEBE;
    font-size: 26rpx
}

.weui-form-preview__item {
  margin: 20rpx 0;
}

.line-bottom {
  border-bottom:1rpx dashed #d9d9d9;
}

.price {
  color: #000000;
}

.header-box{
  height: 30rpx;
}

.show-box {
  width: 94%;
  height: 85%;
  margin: 0 3%;
  border-radius: 15rpx;
  box-shadow:0 0 4px rgba(0, 0, 0, 0.14),0 4px 8px rgba(0, 0, 0, 0.28);
  overflow: hidden;
}

.submit-box {
  position: absolute;
  bottom: 2%;
  left: 0;
  width: 94%;
  height: 100rpx;
  margin: 0 3%;
  border-radius: 15rpx;
  background: #8DC048;
  text-align: center;
  color: #FFF;
  line-height: 100rpx;
  box-shadow:0 0 4px rgba(0, 0, 0, 0.14),0 4px 8px rgba(0, 0, 0, 0.28);
}
