.avatar {
  position: relative;
  margin-right: 20rpx;
  vertical-align: middle;
}

.avatar-image {
  width:40px; 
  height: 40px;
  border-radius:50%;
}

.page {
  width: 100%;
  height: 100%;
  background: #FF7777;
  overflow: scroll;
}

.header {
  width: 100%;
  text-align: center;
}

.title {
  display: inline-block;
  width: 300rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #FF7777;
  background: #FFFFFF;
  border-radius: 30rpx;
}

.list {
  padding: 20rpx;
}

.weui-cell {
  padding:5px 15px;
}

.weui-cells {
  border-radius: 10rpx;
}

.weui-cell:before {
  border-top:1rpx dashed #FF7777;
}

.weui-cells:after {
  border-bottom:none;
}

.weui-cells:before {
  border-top:none;
}