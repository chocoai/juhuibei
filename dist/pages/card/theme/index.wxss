.wrap {
  display: block;
  padding: 1%;
  margin-bottom: 80rpx;
}

.item {
  width: 46%;
  margin: 2%;
  flex-grow: 0;
  background: #ffffff;
  box-shadow: 0 0 10rpx #ccc;
  border-radius: 5rpx;
  text-align: center;
  overflow: hidden;
}
.item-photo-box {
  position: relative;
  width:100%;
  height: 520rpx;
  box-shadow: 0px 0px 10px #ccc inset;
  background-image: url('https://www.juhuibei.com/images/add_photo.jpg');
  background-size:100% 520rpx;
}

.item-title {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  background: #F5F5F5;
  color: #3E3E3E;
  font-size: 12px;
  padding: 4rpx 0;
  z-index: 10000;
  box-shadow:0 0 4px rgba(0, 0, 0, 0.14);
}

.item-radio {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  text-align: center;
  padding-bottom: 20rpx;
}

.item-photo {
  width:100%;
  height:520rpx;
}

.item-text {
  font-size: 24rpx;
}

.menu {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  background: #F8F8F8;
  text-align: center;
  z-index: 10000;
}

.menu-btn {
  font-size: 12px;
  display: inline-block;
  width: 140rpx;
  height: 60rpx;
  border-radius: 30rpx;
  line-height: 60rpx;
  margin-top: 10rpx;
  color: #3E3E3E;
}

.menu-preview {
 position: absolute;
 left: 20rpx;
 top:0;
 box-shadow:0 0 4px rgba(0, 0, 0, 0.14),0 4px 8px rgba(0, 0, 0, 0.28);
}

.menu-make {
  position: absolute;
  right: 20rpx;
  top:0;
  box-shadow:0 0 4px rgba(0, 0, 0, 0.14),0 4px 8px rgba(0, 0, 0, 0.28);
}