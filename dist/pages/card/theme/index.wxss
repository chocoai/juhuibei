.item {
  width: 47%;
  margin: 1.16%;
  flex-grow: 0;
  background: #ffffff;
  box-shadow: 0 0 10rpx #ccc;
  border-radius: 5rpx;
  text-align: center;
}
.item-photo-box {
  width:90%;
  height: 450rpx;
  margin: 5% 5%;
  box-shadow: 0px 0px 10px #ccc inset;
  background-image: url('https://www.juhuibei.com/images/add_photo.jpg');
  background-size:100% 450rpx;
}
.item-photo {
  width:100%;
  height: 450rpx;
}
.item-text {
  font-size: 24rpx;
}