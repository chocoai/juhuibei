.submit-box {
  position: absolute;
  bottom: 2%;
  left: 0;
  width: 94%;
  height: 100rpx;
  margin: 0 3%;
  text-align: center;
  line-height: 100rpx;
  box-shadow:0 0 4px rgba(255, 255, 255, 0.14),0 4px 8px rgba(255, 255, 255, 0.28);
}

.submit-btn {
  color: #FF7777;
  background: #FFFFFF;
  display: inline-block;
  width:100%;
  height:100rpx;
  line-height: 100rpx;
  border-radius: 0;
  border-bottom-left-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
  border-top: 1px dashed #FF7777;
}

.submit-btn::after {
  border: 0;
}

.submit-active {
  opacity: .7;
}

.video-input {
  position: absolute;
  bottom: 10%;
  left: 0;
  width: 94%;
  height: 100rpx;
  margin: 0 3%;
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
  text-align: center;
  line-height: 100rpx;
  background: #FFFFFF;
  box-shadow:0 0 4px rgba(255, 255, 255, 0.14),0 4px 8px rgba(255, 255, 255, 0.28);
}

.weui-input {
  height: 100rpx;
  color: #FF7777;
}

.video-placeholder {
  color: #DDDDDD;
  line-height: 100rpx;
}