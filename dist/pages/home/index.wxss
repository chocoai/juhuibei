.index-hd {
  padding: 70rpx;
  text-align: center;
}
.index-bd {
  padding: 20rpx 30rpx;
  background-color:cadetblue;
  color: #fff;
  text-align: center;
}
.index-ft {
  padding-bottom: 20rpx;
  text-align: center;
}
.index-logo {
  width: 100rpx;
  height: 100rpx;
}
.index-desc {
  margin-top: 20rpx;
  color: #888888;
  font-size: 28rpx;
}

.provider {
  position: fixed;
  width: 100%;
  bottom: 120rpx;
  color: #a9a9a9;
  text-align: center;
}

header-hover {
  color: #FFFFFF;
  background-color: #313538;
}

.header {
  position:fixed;
  top: 0;
  left: 0;
  width: 90%;
  height: 50px;
  background: #f44;
  color: #fadd9d;
  line-height: 50px;
  padding: 0 5%;
  z-index: 200;
  margin: 0;
  box-shadow:0 0 4px rgba(0, 0, 0, 0.14),0 4px 8px rgba(0, 0, 0, 0.28)
}

.header-tag {
  margin-left: 30rpx;
}

.header-right {
  display: block;
  float: right;
}

.header-position {
  margin-top: 60px;
}

.menu {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 160rpx;
  text-align: center;
  z-index: 10000;
  background-image: linear-gradient(-180deg,rgba(236,236,234,.00) 0, #FFFFFF 50%);
}

.menu-btn {
  font-size: 12px;
  display: inline-block;
  width: 140rpx;
  height: 60rpx;
  border-radius: 30rpx;
  line-height: 60rpx;
  margin-top: 80rpx;
  color: #FFFFFF;
  background: #FF7777;
  box-shadow:0 0 4px rgba(0, 0, 0, 0.14),0 4px 8px rgba(255, 119, 119, 0.28);
}

.menu-card {
  position: absolute;
  left: 120rpx;
  bottom: 50rpx;
  font-size: 10px;
}

.menu-active {
  width: 150rpx;
  height: 150rpx;
  line-height: 150rpx;
  border-radius: 50%;
  margin-top: 0;
}

.menu-user {
  position: absolute;
  right: 120rpx;
  bottom: 50rpx;
  font-size: 10px;
}