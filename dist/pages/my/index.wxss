
.my-header{
  background-color: #313538;
  color: #fff;
  display: flex;
  align-items: center;
  padding: 30rpx;
  font-size: 28rpx;
  justify-content:center;
  position: relative;
}

.my-avatar {
  display: inline-block;
  width: 200rpx;
  height: 200rpx;
  text-align: center;
}

.my-avatar-img {
  height: 100rpx;
  width: 100rpx;
  border: 2px solid #FFFFFF;
  border-radius: 50%;
}

.my-header text{
  margin-top: 20rpx;
  display: inline-block;
  width: 200rpx;
}

.my-vip {
  position: absolute;
  width: 120rpx;
  height: 40rpx;
  border-radius: 22rpx;
  border:1px solid #FFFFFF;
  bottom: 10rpx;
  left: 10rpx;
  font-size: 10px;
  text-align: center;
  line-height: 40rpx;
  opacity: 0.4;
}