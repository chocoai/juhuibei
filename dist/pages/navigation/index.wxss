.demo-tab {}
.demo-tab__label {
    width: 100%;
    margin: 20rpx 0;
    display: flex;
    justify-content: center;
     align-items: center 
}
.demo-tab__text {
    margin-left: 8rpx
}
.demo-tab--active {
    color: #ff5777
}

.map_box{
  position:absolute;
  top: 50px;
  bottom: 90px;
  left: 0px;
  right: 0px;
}
#navi_map{
  width: 100%;
  height: 100%;
}
.text_box{
  position:absolute;
  height: 90px;
  bottom: 0px;
  left: 0px;
  right: 0px;
}
.text_box .text{
  margin: 15px;
}
.detail_button{
  position:absolute;
  bottom: 30px;
  right: 10px;
  padding: 3px 5px;
  color: #fff;
  background: #ff4444;
  width:50px;
  text-align:center;
  border-radius:5px;
}

.text_box_bus{
  margin: 0 15px;
  padding: 15px 0;
  border-bottom: 1px solid #c3c3c3;
  font-size: 13px;
}
.text_box_bus .text_item_bus{
  display:inline-block;
  line-height: 8px;
}

.icon {
  display: inline-block;
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 10rpx;
}