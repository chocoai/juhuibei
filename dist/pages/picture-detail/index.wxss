page {
  background: #FFFFFF;
}
.wrap {
    display: block;
    padding: 1%;
  }
.item {
  width: 90%;
  height: 920rpx;
  margin: 5%;
  flex-grow: 0;
  background: #ffffff;
  box-shadow: 0 0 10rpx #ccc;
  border-radius: 10rpx;
  text-align: center;
}
.item-photo-box {
  width:90%;
  height: 600rpx;
  margin: 10% 5%;
  box-shadow: 0px 0px 10px #ccc inset;
  background-image: url('https://www.juhuibei.com/images/add_photo.jpg');
  background-size:100% 630rpx;
}
.item-photo {
  width:100%;
  height: 100%;
  margin-bottom: 40rpx;
}
.item-text {
  font-size: 36rpx;
}
.item-desc {
  margin: 30rpx 0;
  font-size: 24rpx;
  color: #DDDDDD;
}
.date{
  width:100%;
  text-align: center;
  color:#ff4444;
}
