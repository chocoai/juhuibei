      <image src="/common/assets/images/game/monk.jpg" class="img-style" animation="{{animTranspond}}" bindtap="transpond"></image>
    </view>
    <view class="speed-dial-button">
      <image src="/common/assets/images/game/monk.jpg" class="img-style" animation="{{animInput}}" bindtap="input"></image>  
