<import src="../../components/button/button.wxml"/>

<template is="button" data="{{ ...$wux.button.br }}"/>

<view class="page">
    <view class="page__hd">
        <view class="page__title">Button</view>
        <view class="page__desc">浮动按钮</view>
    </view>

    <view class="example--box">
      <view class="example--demo demo">
          <view class="demo-inner">
              <slot></slot>123
          </view>
      </view>
      <view class="example--meta meta">
          <view class="meta-title">标题</view>
          <view class="meta-desc">描述</view>
      </view>
      <view class="example--source">
          <view class="view-btn {{viewSourceClass}}" bindtap="bindViewSourceEvent">{{ isExpandSource ? 'Hide' : 'Show' }} Code</view>
          <view wx:if="{{isExpandSource}}">123123</view>      
      </view>
  </view>
</view>